class Solution {
    public int maxArea(int[] height) {
        int maxArea=0;
        int right=height.length-1;
        int left=0;

        while(left<right){
            int width=right-left;
            int area=Math.min(height[left],height[right])*width;
            maxArea=Math.max(maxArea,area);

            if(height[left]>=height[right]){
                right--;
            }
            else{
                left++;
            }
        }
        return maxArea;
    }
}

class Solution {
    public int characterReplacement(String s, int k) {
        int left=0,right;
        int mostOccurance = 0;
        int ans = 0;
        int[] occurance = new int[26];

        for(right=0; right < s.length(); right++){
            mostOccurance = Math.max(mostOccurance, ++occurance[s.charAt(right) - 'A']);
            if(right - left + 1 - mostOccurance > k){
                occurance[s.charAt(left) - 'A']--;
                left++;
            }
            ans = Math.max(ans, right - left + 1);
        }
        return ans;
    }
}
